{
  "name": "repo-health",
  "version": "0.1.0",
  "description": "See the health of all your GitHub repos on one page",
  "private": true,
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "homepage": "https://repohealth.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/RepoHealth/repohealth.github.io.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "build": "npm-run-parallel build:js build:css",
    "build:dev": "npm-run-parallel build:js:dev build:css:dev",
    "build:js": "simplifyify src/ts/index.ts --outfile js/repo-health.js --minify --debug",
    "build:js:dev": "simplifyify src/ts/index.ts --outfile js/repo-health.js --bundle --debug",
    "build:css": "node-sass --source-map true --output-style compressed src/scss/index.scss css/repo-health.css",
    "build:css:dev": "node-sass --source-map true --output-style nested src/scss/index.scss css/repo-health.css",
    "watch": "npm-run-parallel watch:js watch:css",
    "watch:js": "npm run build:js:dev -- --watch",
    "watch:css": "npm run build:css:dev -- --watch --recursive",
    "upgrade": "npm-check -u"
  },
  "devDependencies": {
    "@types/node": "^10.9.3",
    "node-sass": "^4.9.3",
    "npm-check": "^5.8.0",
    "npm-run-parallel": "^0.6.0",
    "octicons": "^8.1.0",
    "simplifyify": "^6.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
