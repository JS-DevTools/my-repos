{
  "name": "repo-health",
  "version": "0.1.0",
  "description": "See the health of all your GitHub repos on one page",
  "private": true,
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "homepage": "https://repohealth.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/RepoHealth/repohealth.github.io.git"
  },
  "license": "MIT",
  "scripts": {
    "lint": "tslint -p tsconfig.json",
    "build": "simplifyify ts/index.ts --outfile js/repo-health.js --minify --debug",
    "build:dev": "simplifyify ts/index.ts --outfile js/repo-health.js --bundle --debug",
    "watch": "npm-run-parallel watch:typescript watch:jekyll",
    "watch:typescript": "npm run build:dev -- --watch",
    "watch:jekyll": "jekyll serve --livereload",
    "start": "jekyll serve",
    "upgrade": "npm-check -u"
  },
  "devDependencies": {
    "@types/node": "^10.9.3",
    "npm-check": "^5.8.0",
    "npm-run-parallel": "^0.6.0",
    "simplifyify": "^6.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  }
}
