{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",

    "outDir": "js",
    "sourceMap": true,
    "declaration": false,

    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,

    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },
  "include": [
    "_ts/**/*.ts",
    "_ts/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
